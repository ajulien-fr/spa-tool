{% extends 'base.html.twig' %}

{% block title %}
    Lecture d'un Contributeur
{% endblock %}

{% block body %}
    <div class="container mb-4">
        <div class="alert alert-info text-center my-4">
            <h1>Lecture d'un Contributeur</h1>
        </div>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th class="text-center">ID</th>
                    <td>{{ contributeur.id }}</td>
                </tr>
                <tr>
                    <th class="text-center">Nom</th>
                    <td>{{ contributeur.nom }}</td>
                </tr>
                <tr>
                    <th class="text-center">Adresse</th>
                    <td>{{ contributeur.adresse }}</td>
                </tr>
                <tr>
                    <th class="text-center">Code Postal</th>
                    <td>{{ contributeur.codePostal }}</td>
                </tr>
                <tr>
                    <th class="text-center">Ville</th>
                    <td>{{ contributeur.ville }}</td>
                </tr>
                <tr>
                    <th class="text-center">Téléphone</th>
                    <td>{{ contributeur.telephone }}</td>
                </tr>
                <tr>
                    <th class="text-center">Email</th>
                    <td>{{ contributeur.email }}</td>
                </tr>
                <tr>
                    <th class="text-center">Remarque</th>
                    <td>{{ contributeur.remarque }}</td>
                </tr>
                <tr>
                    <th class="text-center">Actions</th>
                    <td>
                        {% for action in contributeur.actions %}
                            <a href="{{ path('action_show', {'id': action.id}) }}" class="badge badge-pill badge-info">{{ action }}</a>
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="row">
            <div class="col-md-6">
                <a href="{{ path('contributeur_index') }}" class="btn btn-secondary btn-block">Listing</a>
            </div>
            <div class="col-md-6">
                <a href="{{ path('contributeur_edit', {'id': contributeur.id}) }}" class="btn btn-warning btn-block">Éditer</a>
            </div>
        </div>

        {{ include('contributeur/_delete_form.html.twig') }}
    </div>
{% endblock %}
